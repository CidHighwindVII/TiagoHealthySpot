@model Healthy_Spot.Models.Equipamento
@using Healthy_Spot.Models
@{
    ViewBag.Title = "Editar Equipamento";
}

<h2>Editar Equipamento</h2>

@using (Html.BeginForm("EditaEquipamento", "Equipamentos", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
@Html.AntiForgeryToken()

<div class="form-horizontal">
	<h4>Equipamento</h4>
	<hr />
	@Html.ValidationSummary(true, "", new { @class = "text-danger" })
	@Html.HiddenFor(model => model.NMaquina)

	<div class="form-group">
		@Html.LabelFor(model => model.NomeEquipamento, htmlAttributes: new { @class = "control-label col-md-2" })
		<div class="col-md-10">
			@Html.EditorFor(model => model.NomeEquipamento, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(model => model.NomeEquipamento, "", new { @class = "text-danger" })
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(model => model.TipoEquipamento, htmlAttributes: new { @class = "control-label col-md-2" })
		<div class="col-md-10">
			@Html.EditorFor(model => model.TipoEquipamento, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(model => model.TipoEquipamento, "", new { @class = "text-danger" })
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(model => model.MusculoTrabalhado, htmlAttributes: new { @class = "control-label col-md-2" })
		<div class="col-md-10">
			@Html.EditorFor(model => model.MusculoTrabalhado, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(model => model.MusculoTrabalhado, "", new { @class = "text-danger" })
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(model => model.ImagemPath, htmlAttributes: new { @class = "control-label col-md-2" })
		<div class="col-md-10">
			<img class="img-thumbnail img-rounded" src="@Url.Content("~" + Model.ImagemPath)" width="400" height="400" />
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(model => model.ImagemPath, "Nova Imagem", htmlAttributes: new { @class = "control-label col-md-2" })
		<div class="col-md-10">
			<input type="file" name="Imagem" />
		</div>
	</div>

	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<input type="submit" value="Guardar" class="btn btn-default" />
		</div>
	</div>
</div>
}

<div>
	@Html.ActionLink("Lista de Equipamentos", "ListaEquipamentos")
</div>
<script src="~/Scripts/jquery-1.9.0.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>